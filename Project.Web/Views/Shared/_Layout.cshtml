<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - All Mountain Shope</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/MyStyles.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
@*<body style="background:url(../../Content/img/bc.jpg); background-size:cover">*@
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("All Mountain Shoppe", "Main", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Boards", "CategoryProducts", "Home", new { id = 1 }, null)</li>
                    <li>@Html.ActionLink("Bindings", "CategoryProducts", "Home", new { id = 2 }, null)</li>
                    <li>@Html.ActionLink("Boots", "CategoryProducts", "Home", new { id = 3 }, null)</li>
                    <li>@Html.ActionLink("Jackets", "CategoryProducts", "Home", new { id = 4 }, null)</li>
                    <li>@Html.ActionLink("Pants", "CategoryProducts", "Home", new { id = 5 }, null)</li>
                    <li>@Html.ActionLink("Cart", "ShoppingCart", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        
    </div>
    <div class="container">
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - All Mountain Shoppe &bull; Contact: Jenni (866)-867-5309 &bull; Email: JCraig@allmountain.com</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/salvattore.min.js"></script>
</body>

</html>